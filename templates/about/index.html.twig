{% extends 'base.html.twig' %}

{% block title %}About index{% endblock %}

{% block body %}
    <h1 class="mt-4 ml-2">About index</h1>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col" >Resume</th>
                {# <th scope="col">ImageFile</th> #}
                <th scope="col">ImageName</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">ModifiedAt</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for about in abouts %}
            <tr>
                <td scope="row">{{ about.id }}</td>
                <td>{{ about.Title }}</td>
                <td>{{ about.resume }}</td>
                {# <td>{{ about.imageFile }}</td> #}
                <td>{{ about.imageName }}</td>
                <td>{{ about.createdAt ? about.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ about.modifiedAt ? about.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('about_show', {'id': about.id}) }}" class="btn btn-secondary">show</a>
                    <a href="{{ path('about_edit', {'id': about.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('about_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
