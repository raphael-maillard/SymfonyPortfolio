{% extends 'base.html.twig' %}

{% block title %}About{% endblock %}

{% block body %}
    <h1>About</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ about.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ about.Title }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ about.resume }}</td>
            </tr>
            <tr>
                <th>ImageFile</th>
                <td>{{ about.imageFile }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ about.imageName }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ about.createdAt ? about.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified At</th>
                <td>{{ about.modifiedAt ? about.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('about_index') }}" class="btn btn-info">back to list</a>

    <a href="{{ path('about_edit', {'id': about.id}) }}" class="btn btn-warning">edit</a>

    {{ include('about/_delete_form.html.twig') }}
{% endblock %}
