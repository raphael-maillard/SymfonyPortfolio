{% extends 'base.html.twig' %}

{% block title %}Technologie index{% endblock %}

{% block body %}
    <h1 class="mt-5">Technologie index</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Resume</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for technologie in technologies %}
            <tr>
                <td>{{ technologie.id }}</td>
                <td>{{ technologie.name }}</td>
                <td>{{ technologie.resume }}</td>
                <td>
                    <a href="{{ path('technologie_show', {'id': technologie.id}) }}" class="btn btn-info" >show</a>
                    <a href="{{ path('technologie_edit', {'id': technologie.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('technologie_new') }}">Create new</a>
{% endblock %}
