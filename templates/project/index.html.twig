{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1 class="mt-5">Project index</h1>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">ImageName</th>
                <th scope="col">Link</th>
                <th scope="col">Resume</th>
                <th scope="col">LinkSourceCode</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.imageName }}</td>
                <td>{{ project.link }}</td>
                <td>{{ project.resume }}</td>
                <td>{{ project.linkSourceCode }}</td>
                <td>
                    <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('project_new') }}">Create new</a>
{% endblock %}
